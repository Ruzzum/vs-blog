<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>

    <!--CSS-->
    @Styles.Render("~/bundles/coreCSS")

</head>
<body>

    <!--LOGO / OPCIONES-->
    <header id="header">
        <div class="col-xs-12">
            <section class="col col-sm-4 prueba">
                <img src="/Content/img/logo.png" alt="" />
            </section>
            <section class="col col-sm-8">
                <ul class="nav nav-pills mt10 mb10">
                    <li>
                        <button class="btn btn-primary"><i class="fa fa-music"></i> Opcion 1</button>
                    </li>
                    <li>
                        <button class="btn btn-primary"><i class="fa fa-headphones"></i> Opcion 2</button>
                    </li>
                    <li>
                        <button class="btn btn-primary"><i class="fa fa-play"></i> Opcion 3</button>
                    </li>
                    <li>
                        <button class="btn btn-primary"><i class="fa fa-male"></i> Opcion 4</button>
                    </li>
                </ul>
            </section>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Mayo 2017</p>
        </footer>
    </div>

    <!--JS-->
    @Scripts.Render("~/bundles/coreJS")
    @RenderSection("ViewsJS", required: false)

</body>
</html>
